/*
  Define the SPI bus for nice!view on nice_nano_v2
  so the builtin nice_view overlay can reference it.
*/

&spi1 {
    status = "okay";

    nice_view_spi: nice_view_spi {
        compatible = "nordic,nrf-spim";
        pinctrl-0 = <&spi1_default>;
        pinctrl-names = "default";
        cs-gpios = <&gpio0 6 GPIO_ACTIVE_HIGH>; /* change if your CS pin differs */
    };
};
